@model IEnumerable<spice.Models.MenuItem>

@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <partial name="AdminLTE/DataTables/_DataTablesStyles" />
}
<div class="container border category-area">
    <div class="row">
       <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <strong>Menu Items</strong>
                    </h3>
                    <p class="text-right">
                        <a asp-action="Create" class="btn btn-primary btn-sm">Create New Item</a>
                    </p>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Category)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubCategory)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.Name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubCategory.Name)
                                    </td>

                                    <td>
                                        <partial name="_CreateDataTableActionButton" model="@item.Id" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->



    </div>
</div>

@section Scripts {
    <partial name="AdminLTE/DataTables/_DataTablesScripts" />
}