@model spice.Models.SubCategory

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container border category-area">
    <div class="category-area-upper">
        <div class="row">
            <div class="col-8 offset-2">
                <h1>Details</h1>
                <div>
                    <h4>SubCategory</h4>
                    <hr />
                </div>
            </div>
        </div>
            <dl class="row">
                <dt class="col-sm-3 offset-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3 offset-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
            </dl>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-2">
                <div class="row">
                    <div class="col-md-6">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary form-control">Edit</a>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-info form-control">Back to Lists</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>