@model IEnumerable<spice.Models.SubCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container border category-area">
    <div class="row category-area-upper">
        <div class="col-md-6 text-left">
            <strong>Sub-Category Lists</strong>

        </div>
        <div class="col-md-6 text-right">
            <partial name="_CreateSubCategoryButton" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center"> @Html.DisplayNameFor(model => model.Name)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Category)</th>
                            <th scope="col"></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.Name)</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.Name)
                                </td>
                                <td class="text-center">
                                    <partial name="_CreateSubCategoryTableButton" model="item.Id" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center">No Category Exits.....</p>
            }
        </div>
    </div>
</div>
