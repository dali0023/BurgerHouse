@model spice.Models.Coupon

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container category-area">
    <div class="text-center">
        <h3>Coupon Edit</h3>
    </div>
    <br />
    <div class="col-12 border">
        @{
            var base64 = Convert.ToBase64String(Model.Picture);
            var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
        }
        <img src="@imgsrc" style="height:100%; width:100%" />
    </div>
    <div class="col-12">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" class="category-area-upper" style="margin-top: 15px !important">
            <input hidden asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Name" type="text" class="form-control ">
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="CouponType" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <select asp-for="CouponType"
                            asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control">
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Discount" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Discount" type="text" class="form-control ">
                </div>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="MinimumAmount" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="MinimumAmount" type="text" class="form-control ">
                </div>
                <span asp-validation-for="MinimumAmount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Picture" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Picture" type="file" id="ProjectImage" name="files" multiple class="form-control ">
                </div>
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="IsActive" class="col-sm-2 form-check-label "></label>
                <div class="col-sm-6">

                    <div class="form-check form-check-inline">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox">
                        <label asp-for="IsActive" class="form-check-label "></label>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6 offset-2">
                    <div class="row">
                        <div class="col-md-6">
                            <input type="submit" class="btn btn-primary form-control" value="Save" />
                        </div>
                        <div class="col-md-6">
                            <a asp-action="Index" class="btn btn-info form-control">Back to Coupons Lists</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

