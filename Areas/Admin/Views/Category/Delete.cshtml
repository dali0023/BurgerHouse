@model Category
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container category-area">
    <form asp-action="Delete" method="post" class="category-area-upper" style="margin-top: 15px !important">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="Name" readonly type="text" class="form-control ">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-2">
                <div class="row">
                    <div class="col-md-6">
                        <input type="submit" asp-route-id="@Model.Id" class="btn btn-danger form-control" value="Delete" />
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-info form-control">Back to Lists</a>
                    </div>
                </div>
            </div>

        </div>

    </form>
</div>

