@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container border category-area">
        <div class="row category-area-upper">
            <div class="col-md-6 text-left">
                <strong>Category List</strong>
            </div>
            <div class="col-md-6 text-right">
               <partial name="_CreateCategoryButton"/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center"> @Html.DisplayNameFor(model => model.Name)</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@Html.DisplayFor(m => item.Name)</td>
                                    <td class="text-center">
                                     <partial name="_CreateCategoryTableButton" model="item.Id"/>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center">No Category Exits.....</p>
                }
            </div>
        </div>
    </div>
